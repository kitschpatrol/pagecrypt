{
    "compilerOptions": {
        "declaration": true,
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "module": "commonjs",
        "resolveJsonModule": true,
        "emitDeclarationOnly": true
    },
    "include": ["src/*.ts"]
}
